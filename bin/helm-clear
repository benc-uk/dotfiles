#!/bin/bash

which helm > /dev/null || { echo -e "ðŸ’¥ Error! helm not installed"; exit 1; }

if [ $# -lt 1 ]; then
  echo "Usage: $0 {namespace}"
  exit 1
fi

source ./lib.sh
warning "This will remove all Helm releases in the given namespace"

helm ls -n "$1" --short | xargs -L1 helm delete -n "$1"
