#!/bin/bash

echo -e "\n\e[34mâ•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
echo -e "â•‘\e[33m       ðŸ’ª Bicep Deployer ðŸš€\e[34m       â•‘"
echo -e "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•\e[0m"

which az > /dev/null || { echo -e "ðŸ’¥ Error! Azure CLI not installed"; exit 1; }
test -f ~/.azure/bin/bicep || { echo -e "ðŸ’¥ Error! Bicep not installed. Run 'az bicep install'"; exit 1; }

# Param handling stuff
OPTS=$(getopt -o t:p:l:s:h --long template:,location:,subscription:,parameters:,help -n 'parse-options' -- "$@")
if [ $? != 0 ] ; then echo "Failed parsing options." >&2 ; usage; exit 1 ; fi
eval set -- "$OPTS"

# Param handling stuff
while true; do
  case "$1" in
    -t | --template ) FILE="$2"; shift; shift;;
    -p | --parameters ) PARAMS="$2"; shift; shift;;
    -l | --location ) LOC="$2"; shift; shift;;
    -s | --subscription ) SUB="$2"; shift; shift;;
    -h | --help ) HELP=true; shift ;;
    -- ) shift; break ;;
    * ) break ;;
  esac
done

# if LOC not set
if 

az deploy subscription --verbose \
--template-file "$FILE" \
--location "$LOC"